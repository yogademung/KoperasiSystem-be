  updatedBy   String?   @db.VarChar(50) @map("CHANGE_WHO")
  updatedAt   DateTime? @updatedAt @map("CHANGE_DATE")

  nasabah      Nasabah      @relation(fields: [nasabahId], references: [id])
  transactions TransTab[]

  @@map("m_nasabah_tab")
}

